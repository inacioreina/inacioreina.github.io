// Ball class
class Ball {
  constructor(x, y, dx, dy, radius, color, glowRadius) {
    this.x = x;
    this.y = y;
    this.dx = dx;
    this.dy = dy;
    this.radius = radius;
    this.color = color;
	this.glowRadius = glowRadius;
  }
  draw() {

	// Glow
	ctx.beginPath();
	ctx.arc(this.x, this.y, this.glowRadius, 0, Math.PI * 2);
	ctx.fillStyle = `rgba(11,156,49,0.5)`;
	ctx.fill();
	ctx.closePath();

	// Ball
    ctx.beginPath();
    ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
    ctx.fillStyle = this.color;
    ctx.fill();
    ctx.closePath();
  }
  update() {
	this.glowRadius = this.radius * 1.1 + sineIn(1 / 0.1) * 2;
    this.x += this.dx;
    this.y += this.dy;
    // Check collision with walls
    if (this.x - this.radius < 0 || this.x + this.radius > canvas.width) {
      this.dx = -this.dx; // Reverse direction
    }
    if (this.y - this.radius < 0 || this.y + this.radius > canvas.height) {
      this.dy = -this.dy; // Reverse direction
    }
    this.draw();
  }
  checkCollision(otherBall) {
    const dx = this.x - otherBall.x;
    const dy = this.y - otherBall.y;
    const distance = Math.sqrt(dx * dx + dy * dy);
    if (distance < this.radius + otherBall.radius) {
      // Balls collide, change direction
      const tempDx = this.dx;
      const tempDy = this.dy;
      this.dx = otherBall.dx;
      this.dy = otherBall.dy;
      otherBall.dx = tempDx;
      otherBall.dy = tempDy;
    }
  }
}
// Initialize balls
for (let i = 0; i < numBalls; i++) {
  const radius = 5;
  const glowRadius = 10;
  const x = Math.random() * (canvas.width - 2 * radius) + radius;
  const y = Math.random() * (canvas.height - 2 * radius) + radius;
  const dx = (Math.random() - 0.5) * .1; // Random speed in x direction
  const dy = (Math.random() - 0.5) * .1; // Random speed in y direction
  //const color = `rgb(${Math.random() * 255}, ${Math.random() * 255}, ${Math.random() * 255})`;
  const color = `rgb(255,255,255)`;
  balls.push(new Ball(x, y, dx, dy, radius, color));
}
function animate() {
  requestAnimationFrame(animate);
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  balls.forEach(ball => {
    ball.update();
    balls.forEach(otherBall => {
      if (ball !== otherBall) {
        ball.checkCollision(otherBall);
      }
    });
  });
}
